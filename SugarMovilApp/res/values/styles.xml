<resources xmlns:android="http://schemas.android.com/apk/res/android">
   <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Colors -->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/primary_color</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/secondary_color</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/secondary_color</item>

        <!-- Action Bar -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- Text Color Highlight -->
        <item name="android:textColorHighlight">#115198</item>

        <!-- Drawer Arrow -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>
	
    <style name="calendar_day_style" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10sp</item>
    
    </style>
    
	<style name="calendar_event_style" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">8sp</item>
    </style>
    
	<style name="calendar_meet_style" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">8sp</item>
        <item name="android:background">#3F85F4</item>
    </style>
    
	<style name="calendar_task_style" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">8sp</item>
        <item name="android:background">#7CB342</item>
    </style>
    <style name="calendar_other_style" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">8sp</item>
        <item name="android:background">#009688</item>
    </style>
   
</resources>
